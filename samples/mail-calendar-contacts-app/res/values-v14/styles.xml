<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar.Inbox</item>
    </style>

	<style name="InboxTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
	    <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar.Inbox</item>
	</style>

	<style name="ToDoTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
	    <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar.ToDo</item>
	</style>

	<style name="DoneTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
	    <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar.Done</item>
	</style>

	<style name="Widget.Styled.ActionBar.ToDo" parent="@android:style/Widget.ActionBar">
	    <!-- Setting values in the default namespace affects API levels 7-13 -->
	    <item name="android:background">@drawable/todo_actionbar_background</item>
	    <item name="android:backgroundStacked">@drawable/todo_actionbar_background</item>
	    <item name="android:backgroundSplit">@drawable/todo_actionbar_background</item>
	    <item name="android:titleTextStyle">@style/TitleTextStyle</item>
	</style>

	<style name="Widget.Styled.ActionBar.Done" parent="@android:style/Widget.ActionBar">
	    <!-- Setting values in the default namespace affects API levels 7-13 -->
	    <item name="android:background">@drawable/done_actionbar_background</item>
	    <item name="android:backgroundStacked">@drawable/done_actionbar_background</item>
	    <item name="android:backgroundSplit">@drawable/done_actionbar_background</item>
	    <item name="android:titleTextStyle">@style/TitleTextStyle</item>
	</style>

	<style name="Widget.Styled.ActionBar.Inbox" parent="@android:style/Widget.ActionBar">
	    <!-- Setting values in the default namespace affects API levels 7-13 -->
	    <item name="android:background">@drawable/inbox_actionbar_background</item>
	    <item name="android:backgroundStacked">@drawable/inbox_actionbar_background</item>
	    <item name="android:backgroundSplit">@drawable/inbox_actionbar_background</item>
	    <item name="android:titleTextStyle">@style/TitleTextStyle</item>
	</style>

</resources>
